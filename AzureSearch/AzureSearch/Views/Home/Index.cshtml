@{
    ViewBag.Title = "Home Page";
}

@model AzureSearch.Models.Product

<br />

<h2>Indexar novo Produto</h2>
<br />
<div class="row">

    @using (Html.BeginForm("SaveDocument", "Home", FormMethod.Post, new { @class="form-horizontal" }))
    {
        <div class="form-group">
            <label>Nome do Produto</label>
            @Html.TextBoxFor(x => x.Name, new { @class="form-control" })
        </div>
        <div class="form-group">
            <label>Categoria</label>
            @Html.TextBoxFor(x => x.Categoria, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Preco</label>
            @Html.TextBoxFor(x => x.Preco, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Descrição</label>
            @Html.TextAreaFor(x => x.Descricao, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Enviar</button>
    }

</div>