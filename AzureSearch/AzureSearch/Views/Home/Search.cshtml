
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<AzureSearch.Models.Product>

<h2>Search</h2>
<br />
<div class="row">

    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-inline" }))
    {
        <div class="form-group">
            <label>Pesquisar</label>
            @Html.TextBox("searchText", null, htmlAttributes:new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Filtrar</label>
            @Html.TextBox("filter", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Pesquisar</button>
    }

    <br />
    <br />

    @if (Model != null)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Preco</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@String.Join(",",product.Categoria.ToArray())</td>
                        <td>R$ @product.Preco.ToString("N2")</td>
                        <td>@product.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
